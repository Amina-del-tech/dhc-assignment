import 'package:flutter/material.dart';
import 'package:my_flutter_journey/screens/widgets/week_card.dart';

class WeekScreensList extends StatelessWidget {
  final String weekTitle;
  final String weekDescription;
  final List<Map<String, dynamic>> screens;

  const WeekScreensList({
    super.key,
    required this.weekTitle,
    required this.weekDescription,
    required this.screens,
  });

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(
          weekTitle,
          style: const TextStyle(
            color: Colors.white,
            fontWeight: FontWeight.bold,
          ),
        ),
        backgroundColor: Colors.black87,
        iconTheme: const IconThemeData(color: Colors.white), 
        centerTitle: true,
      ),
      body: ListView(
        padding: const EdgeInsets.all(16),
        children: [
          Container(
            padding: const EdgeInsets.all(16),
            margin: const EdgeInsets.only(bottom: 16),
            decoration: BoxDecoration(
              color: Colors.blueGrey.shade50,
              borderRadius: BorderRadius.circular(14),
            ),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Text(
                  weekTitle,
                  style: const TextStyle(
                    fontSize: 20, 
                    fontWeight: FontWeight.bold
                  )
                ),
                const SizedBox(height: 6),
                Text(
                  weekDescription,
                  style: const TextStyle(fontSize: 14),
                ),
              ],
            ),
          ),
          ...screens.map((item) => WeekCard(
                title: item['title'],
                subtitle: item['description'],
                icon: Icons.apps,
                gradientColors: item['gradientColors'] ??
                    const [Color(0xff6FB1FC), Color(0xff4364F7)], 
                onTap: () => Navigator.push(
                  context,
                  MaterialPageRoute(builder: (_) => item['screen']),
                ),
              )),
        ],
      ),
    );
  }
}